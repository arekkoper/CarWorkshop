<h1>Create Car Workshop</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/CarWorkshop/Create" method="post">

            <div class="form-group mb-3">
                <label class="control-label" for="Name">Name</label>
                <input class="form-control" id="Name" type="text" name="Name"/>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Description">Description</label>
                <input class="form-control" id="Description" type="text" name="Description" />
            </div> 

            <div class="form-group mb-3">
                <label class="control-label" for="About">About</label>
                <input class="form-control" id="About" type="text" name="About" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="PhoneNumber">Phone Number</label>
                <input class="form-control" id="PhoneNumber" type="text" name="PhoneNumber" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Adress">Adress</label>
                <input class="form-control" id="Adress" type="text" name="Adress" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="City">City</label>
                <input class="form-control" id="City" type="text" name="City" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="PostalCode">Postal Code</label>
                <input class="form-control" id="PostalCode" type="text" name="PostalCode" />
            </div>

            <div class="form-group mb-3">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>

        </form>

    </div>
</div>